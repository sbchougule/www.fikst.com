{
  "browserSyncOptions" : {
    "proxy": "localhost/wordpress/",
    "notify": false
  },
  "browserSyncWatchFiles" : [
    "./css/*.min.css",
    "./js/*.min.js",
    "./**/*.php"
  ],
  "paths" : {
    "js": "./js",
    "css": "./css",
    "img": "./img",
    "node": "./node_modules/",
    "bower": "./bower_components/",
    "dev": "./src",
    "vendor": "/vendor"
  }
}
